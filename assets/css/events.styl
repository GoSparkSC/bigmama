@import '_settings'

$event-height = 375px
$event-height-mbl = 325px

.nav-whatwedo
    background #222

.container
    padding 2px

.events
    width 100%

.gutter
    padding 2px

.event
    height $event-height
    margin 0
    position relative
    overflow hidden

    &:after
        content ""
        width 100%; height 100%
        position absolute
        top 0; left 0
        opacity 0
        transition opacity .25s ease-out
        cursor pointer


    &:hover:after
        background $spark-yellow
        opacity 0.8

    &:hover .oneliner
        opacity 1

        // >p
        //     opacity 1

    .oneliner
        position absolute
        top 0; bottom 0
        padding 140px 20px 0 20px
        z-index 1
        color white
        font-size 18px
        font-style italic
        font-weight 500
        text-shadow 2px 2px 4px rgba(0,0,0,0.5)
        letter-spacing 1px
        line-height 22px
        transition opacity .25s ease-out

        opacity 0
        cursor pointer


.image
    width 100%; height 100%
    position relative
    overflow hidden !important

    .image-inner
        width 110%; height $event-height + 20px
        margin-top -10px; margin-left -5%
        background-position center
        background-size cover
        background-repeat no-repeat
        filter blur(5px)

.name
    padding 30px 20px
    position absolute
    color white
    font-size 24px
    font-family 'Proxima Nova Bold'
    // font-weight 700
    text-shadow 2px 2px 4px rgba(0,0,0,0.5)
    text-transform uppercase
    letter-spacing 1px
    z-index 1

.event-info
    display none
    position fixed
    top 0; right 0; bottom 0; left $menu-width
    background rgba(0,0,0,0.6)
    overflow scroll
    z-index 10

.event-page
    width 100%
    position relative
    background #fff
    border-top 12px solid rgba(0,0,0,0)
    border-right 12px solid rgba(0,0,0,0)
    border-left 12px solid rgba(0,0,0,0)
    background-clip padding-box

.event-page-close a
    position absolute
    top 20px; right 25px
    font-size 42px
    text-decoration none
    list-style none
    color #fff
    text-shadow 2px 2px 2px black
    cursor pointer
    z-index 999999


@media only screen and (max-width: $mobile-bp-lg)
    .event
        height $event-height-mbl
        .oneliner
            display none
    .image-inner
        height $event-height-mbl + 20px
    .event-info
        left 0
    .name
        right 0; bottom 0
        text-align right
