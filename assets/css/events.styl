@import '_settings'

$event-height = 400px

.container
    padding 0

.events
    width 100%

.gutter
    padding 2px

.event
    height $event-height
    margin 0
    position relative
    overflow hidden

.image
    width 100%; height 100%
    position relative
    filter blur(5px)
    overflow hidden
    :hover
        filter grayscale(100%)
    .image-inner
        width 110%; height $event-height + 20px
        margin-top -10px; margin-left -5%
        backgroud-position center
        background-size cover
        background-repeat no-repeat
        background-image url('//stuffpoint.com/cats/image/459576-cats-cat-and-nature-wallpaper.jpg')

.name
    padding 30px 20px
    position absolute
    color white
    font-size 28px
    font-weight 700
    text-shadow 2px 2px 4px rgba(0,0,0,0.5)
    text-transform uppercase
    letter-spacing 2px
    z-index 1

.event-info
    display none
    position fixed
    top 0; right 0; bottom 0; left $menu-width
    background rgba(0,0,0,0.6)
    overflow scroll
    z-index 10

.event-page
    width 100%
    position relative
    background #fff
    border-top 12px solid rgba(0,0,0,0)
    border-right 12px solid rgba(0,0,0,0)
    border-left 12px solid rgba(0,0,0,0)
    background-clip padding-box

.event-page-close a //.inner
    position absolute
    top 20px; right 25px
    font-size 42px
    text-decoration none
    list-style none
    color #fff
    text-shadow 2px 2px 2px black
    z-index 999999


@media only screen and (max-width: $mobile-bp-lg)
    .event-info
        left 0
    .name
        right 0; bottom 0
