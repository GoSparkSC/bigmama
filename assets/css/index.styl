@import '_settings'

.splash
  height 100%
  position relative
  text-align right
  background url("../img/background.jpg")
  background-position center
  background-size cover
  background-repeat no-repeat

.letterhead
    width 80%
    display none

.mission
    width 620px
    padding: 15px 30px
    position relative
    top -90px;
    display inline-block
    background rgba(0,0,0,.5)
    font-size 24px
    letter-spacing 1px
    line-height 34px
    color white

    .highlight
        color $spark-yellow
    
    .box
        padding 1px 2px
        border 1px solid white
    
/* media queries */

@media only screen and (max-width: $mobile-bp-md)
    .splash
        text-align center
    .spacer-50
        height 25%
    .letterhead
        position relative
        display inline-block
    .mission
        width 94%
        position absolute
        top auto; bottom 16px; right 3%
