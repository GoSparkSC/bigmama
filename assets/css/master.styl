@import '_settings'

normalize-css()
base()

/* general */

body
    font-family: $font-stack
    font-size: $font-size
    min-height: $desktop-min-height

/* menu */

$menu-width = 120px
$menu-padding-lr = 20px
$menu-padding-tb = 30px

.menu  
    width: $menu-width
    min-height: $desktop-min-height
    position: fixed
    top: 0; bottom: 0; left: 0
    background: #111
    box-shadow: 3px 3px 5px 0px rgba(0,0,0,0.25)
    z-index: 99
    
    img
        width: $menu-width - $menu-padding-lr*2
        position: absolute
        top: $menu-padding-tb; right: $menu-padding-lr; left: $menu-padding-lr
    
    .nav
        height: 390px // approx. to enable verticle centering
        margin: auto
        position: absolute
        top: 0; bottom: 0
        
        ul
            width: 100%
            margin: 0; padding: 0
            list-style: none
            
            li
                width: $menu-width - $menu-padding-lr*2
                margin: 0; padding: 24px $menu-padding-lr
                font-size: 17.5px; font-weight: 600
                text-align: center; text-transform: uppercase
                
                &.selected
                    background: #222

                a
                    text-decoration: none
                    color: white

    .sm
        width: $menu-width - $menu-padding-lr*2
        right: $menu-padding-lr; bottom: $menu-padding-tb; left: $menu-padding-lr
        position: absolute
            
        ul
            width: 100%
            margin: 0; padding: 0
            list-style: none
            
            li
                width: 100%
                margin: 0; padding: 0
                text-align: center

                a
                    text-decoration: none
                    
                    img
                        width: 38px; height: 38px
                        top: 0; left: 0
                        padding-top: 4px
                        position: relative

/* content */

.content
    padding-left: $menu-width
    position: absolute
    top: 0; right: 0; bottom: 0; left: 0
    z-index: 1
